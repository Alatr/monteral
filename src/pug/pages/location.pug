extends ../layout/main
block variable
    -
        var title_page = headMenu[1].childs[6][0]
        var id_page = 'location'
        var class_page = 'location'
        var breadcrumbsSubitem = [
            {
                label: headMenu[0].item[0],
                link: headMenu[0].item[1]
            },

        ]
    
block footer
  include ../includes/footer-inner-pages.pug
block meta
  title= title_page
  meta(name='description', content='')
block head
    link(rel='stylesheet', href="./assets/styles/main.min.css")
block scripts
  script(defer src='./assets/scripts/index.js')
  script(defer src='./assets/scripts/vendors.bundle.js')
  script(defer src='./assets/scripts/form.bundle.js')
  script(defer src='./assets/scripts/news.js')
  script(defer src='./assets/scripts/smooth_scroll.js')
  script(defer src='./assets/scripts/'+id_page+'.js')
block header

block content
    section.page-first-block
        canvas#c
        picture.page-first-block__bg
            source(srcset="./assets/images/developer/bg.jpg")
            img(alt="#" src="./assets/images/developer/bg.jpg")
        include ../includes/breadcrumbs.pug
        .page-first-block__text-wrap 
            <svg class="page-logo" width="37" height="37" viewBox="0 0 37 37" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path data-path-draw-effect d="M0 37H37V0H0V37ZM33.8975 33.8878H3.10248V3.22742H33.8975V33.8878Z" />
            <path data-path-draw-effect d="M20.294 7.40039V27.9308H16.7573V7.40039H7.39844V31.0804H10.3367V10.5499H13.819V31.0804H23.1778V10.5499H26.7146V31.0804H29.5984V7.40039H20.294Z" />
            </svg>
            h1.page-title(data-gsap-anim-enter) #{headMenu[1].childs[6][0]}
            .page-subtitle.with-line Розташування
        <svg class="mouse screen screen-icon-scroll" data-icon-scroll xmlns="http://www.w3.org/2000/svg" viewBox="-2 -2 76 130" preserveAspectRatio="xMidYMid meet">
            <g fill="none" fill-rule="evenodd">
                <rect width="70" height="118" x="1.5" y="1.5" stroke="#CFBE97" stroke-width="5" rx="36"/>
                <circle class="scroll" cx="36.5" cy="31.5" r="4.5" fill="#CFBE97"/>
            </g>
            </svg>
        ul.lang.screen__lang
            li(data-animate-links).lang__item.lang__item--active
                a(href="#") uk
            li(data-animate-links).lang__item
                a(href="#") ru
            li(data-animate-links).lang__item
                a(href="#") en
        .decor-social(data-animate-links)
        ul.social.screen__social
            li(data-animate-links).social__item
                a(href="#" rel="nofollow" target="_blank") facebook
            li(data-animate-links).social__item
                a(href="#" rel="nofollow" target="_blank") instagram
            li(data-animate-links).social__item
                a(href="#" rel="nofollow" target="_blank") telegram
        .up-arrow(data-up-arrow)
            <svg width="36" height="70" viewBox="0 0 36 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M18 42L18 2M18 2L24 8M18 2L12 8" stroke="#CFBE97" stroke-width="2"/>
                </svg>
            .text Вгору

    section.page-part
        .double-part-block(data-double-part-block)
            .double-part-block__img
                .double-part-block__img-decor-bg
                    img(alt="#" src="./assets/images/location/block-1-bg.jpg")
                .double-part-block__img-main
                    img(alt="#" src="./assets/images/location/block-1.jpg")
                .double-part-block__img-decor-square
            .double-part-block__text
                .double-part-block__title У самому центрі
                p ЖК Montreal House розташований <b>в центрі ділового та культурного життя столиці.</b> Навколо будинку розташована краща <b>міська інфраструктура,</b> адже справжня важливість– це якісне оточення. 
                p Вигідне середовище дозволяє жити, працювати та відпочивати <b>у задоволення.</b>
    section.page-part.double-green
        .page-block-title <span class="gold">На відстані пішої прогулянки</span> від вашого будинку:
        .block-with-decor2
            .block-with-decor2__top 
                .block-with-decor2__count 01
                .block-with-decor2__text  історичні та культурні пам'ятки 
            .block-with-decor2__bottom
                .block-with-decor2__img-wrap(data-nice-entry)
                    img(alt="#" src="./assets/images/location/cathedral.jpg")
        .block-with-decor2
            .block-with-decor2__top 
                .block-with-decor2__count 02
                .block-with-decor2__text престижні навчальні заклади
            .block-with-decor2__bottom
                .block-with-decor2__img-wrap(data-nice-entry)
                    img(alt="#" src="./assets/images/location/kids.jpg")
    section.page-part
        .block-with-logo-decor(data-nice-entry-big)
            .block-with-logo-decor__text-wrap
                .block-with-logo-decor__bg-wrap
                    img(alt="#" src="./assets/images/location/manekens.jpg" )
                    .gradient-bg 
                .block-with-logo-decor__content 
                    .block-with-logo-decor__count  03
                    div ексклюзивні бутики та фірмові магазини
            .block-with-logo-decor__img-wrap
    section.page-part.double-green
        .block-with-decor2
            .block-with-decor2__top 
                .block-with-decor2__count 04
                .block-with-decor2__text топові бізнес-центри та креативні простори
            .block-with-decor2__bottom
                .block-with-decor2__img-wrap(data-nice-entry)
                    img(alt="#" src="./assets/images/location/stairs.jpg")
        .block-with-decor2
            .block-with-decor2__top 
                .block-with-decor2__count 05
                .block-with-decor2__text сучасні торговельно-розважальні комплекси
            .block-with-decor2__bottom
                .block-with-decor2__img-wrap(data-nice-entry)
                    img(alt="#" src="./assets/images/location/ocean-plaza.jpg")
    section.page-part
        .block-with-logo-decor.reverse(data-nice-entry-big)
            .block-with-logo-decor__text-wrap
                .block-with-logo-decor__bg-wrap
                    img(alt="#" src="./assets/images/location/bar.jpg" data-nice-entry-big)
                    .gradient-bg 
                .block-with-logo-decor__content 
                    .block-with-logo-decor__count  06
                    div кращі гастрономічні заклади
            .block-with-logo-decor__img-wrap
    section.page-part.double-green
        .block-with-decor2
            .block-with-decor2__top 
                .block-with-decor2__count 07
                .block-with-decor2__text галереї, театри, концерт-холи
            .block-with-decor2__bottom
                .block-with-decor2__img-wrap(data-nice-entry)
                    img(alt="#" src="./assets/images/location/palace-ukraine.jpg")
        .block-with-decor2
            .block-with-decor2__top 
                .block-with-decor2__count 08
                .block-with-decor2__text найбільші спортивні та концертні майданчики
            .block-with-decor2__bottom
                .block-with-decor2__img-wrap(data-nice-entry)
                    img(alt="#" src="./assets/images/location/olinpiyskiy.jpg")
