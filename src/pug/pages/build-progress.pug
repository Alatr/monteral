extends ../layout/main
block variable
    -
        var title_page = headMenu[1].childs[2][0]
        var id_page = 'build-progress'
        var class_page = 'build-progress'
        var breadcrumbsSubitem = [
            {
                label: headMenu[0].item[0],
                link: headMenu[0].item[1]
            },

        ]
    
block footer
  include ../includes/footer-inner-pages.pug
block meta
  title= title_page
  meta(name='description', content='')
block head
    link(rel='stylesheet', href="./assets/styles/main.min.css")
block scripts
  script(defer src='./assets/scripts/index.js')
  script(defer src='./assets/scripts/vendors.bundle.js')
  script(defer src='./assets/scripts/form.bundle.js')
  script(defer src='./assets/scripts/news.js')
  script(defer src='./assets/scripts/'+id_page+'.js')
block header

block content
    section.page-first-block
        picture.page-first-block__bg
            source(srcset="./assets/images/build-progress/bg.jpg")
            img(src="./assets/images/build-progress/bg.jpg")
        include ../includes/breadcrumbs.pug
        .page-first-block__text-wrap 
            <svg class="page-logo" width="37" height="37" viewBox="0 0 37 37" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path data-path-draw-effect d="M0 37H37V0H0V37ZM33.8975 33.8878H3.10248V3.22742H33.8975V33.8878Z" />
            <path data-path-draw-effect d="M20.294 7.40039V27.9308H16.7573V7.40039H7.39844V31.0804H10.3367V10.5499H13.819V31.0804H23.1778V10.5499H26.7146V31.0804H29.5984V7.40039H20.294Z" />
            </svg>
            h1.page-title(data-gsap-anim-enter) #{headMenu[1].childs[2][0]}
            .page-subtitle.with-line звіти з динаміки будівництва будинку
        .build-statuses-wrap
            -var statuses = [['загальні будівельні роботи','9',],['фасад','100',],['благоустрій','95',],['комунікації','0',],]
                each item in statuses
                    .build-status-item(style="--self-width:"+item[1]+'%')
                        .build-status-item__value #{item[1]}
                        .build-status-item__title #{item[0]}
                        .build-status-item__bar
        <svg class="mouse screen screen-icon-scroll" data-icon-scroll xmlns="http://www.w3.org/2000/svg" viewBox="-2 -2 76 130" preserveAspectRatio="xMidYMid meet">
            <g fill="none" fill-rule="evenodd">
                <rect width="70" height="118" x="1.5" y="1.5" stroke="#CFBE97" stroke-width="5" rx="36"/>
                <circle class="scroll" cx="36.5" cy="31.5" r="4.5" fill="#CFBE97"/>
            </g>
            </svg>
        ul.lang.screen__lang
            li(data-animate-links).lang__item.lang__item--active
                a(href="#") uk
            li(data-animate-links).lang__item
                a(href="#") ru
            li(data-animate-links).lang__item
                a(href="#") en
        .decor-social(data-animate-links)
        ul.social.screen__social
            li(data-animate-links).social__item
                a(href="#" rel="nofollow" target="_blank") facebook
            li(data-animate-links).social__item
                a(href="#" rel="nofollow" target="_blank") instagram
            li(data-animate-links).social__item
                a(href="#" rel="nofollow" target="_blank") telegram
    section.page-part
        .decor-type-vertical
            .decor-type-vertical__top
                .subtitle-with-decor.subtitle-with-decor--white Фільтр
                .to-bottom.custom-select(data-name="month")
                    <svg width="10" height="9" viewBox="0 0 10 9" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <line x1="4.5" x2="4.5" y2="9" stroke="white"/>
                        <line x1="0.0011118" y1="4.5" x2="9.00109" y2="4.52001" stroke="white"/>
                        </svg>
                    .custom-select__items-wrapper
                        .custom-select__item.custom-select__item-current(data-value="null") Усі місяці
                        .custom-select__item(data-value="2020") Январь
                        .custom-select__item(data-value="2019") Февраль
                        .custom-select__item(data-value="2021") Март
                        .custom-select__item(data-value="2021") Апрель
                        .custom-select__item(data-value="2021") Май
                        .custom-select__item(data-value="2021") Июнь
                        .custom-select__item(data-value="2021") Июль
                        .custom-select__item(data-value="2021") Август
                        .custom-select__item(data-value="2021") Сентябрь
                        .custom-select__item(data-value="2021") Октябрь
                        .custom-select__item(data-value="2021") Ноябрь
                        .custom-select__item(data-value="2021") Декабрь
                .to-bottom.custom-select(data-name="year")
                    <svg width="10" height="9" viewBox="0 0 10 9" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <line x1="4.5" x2="4.5" y2="9" stroke="white"/>
                        <line x1="0.0011118" y1="4.5" x2="9.00109" y2="4.52001" stroke="white"/>
                        </svg>
                    .custom-select__items-wrapper
                        .custom-select__item.custom-select__item-current(data-value="null") Усі роки
                        .custom-select__item(data-value="2021") 2021
                        .custom-select__item(data-value="2020") 2020
            .decor-type-vertical__bottom
                a(href='3d.html').contact-item__link.button-second.button-second--color-white
                    .button-second__icon
                        +svg('web-camera')
                    span.button-second__text
                        span веб 
                        b камера
                    span.button-second__logo
                        +svg('logo-m')
